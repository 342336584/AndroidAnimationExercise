<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PreViewActivity"
    android:background="#000000">

    <com.engineer.phenix.internal.view.PhenixViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/gray_circle_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        tools:text="1 / 4"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <FrameLayout
        android:id="@+id/fm_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_show_origin"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/gray_square_circle_bg_white_stroke"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="查看原图"
            android:textColor="#ffffff" />
    </FrameLayout>

    <ImageView
        android:id="@+id/img_download"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/gray_square_circle_bg"
        android:padding="6dp"
        android:src="@drawable/icon_download"
        android:visibility="gone" />
</RelativeLayout>